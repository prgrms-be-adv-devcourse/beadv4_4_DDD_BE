{{/* 리소스 이름 */}}
{{- define "orderApi.fullname" -}}
{{- printf "%s-%s" .Release.Name "order-api" | trunc 63 | trimSuffix "-" }}
{{- end }}

{{/* 공통 라벨 */}}
{{- define "orderApi.labels" -}}
app.kubernetes.io/name: order-api
app.kubernetes.io/instance: {{ .Release.Name }}
app.kubernetes.io/managed-by: {{ .Release.Service }}
{{- end }}

{{/* 셀렉터 라벨 */}}
{{- define "orderApi.selectorLabels" -}}
app: {{ include "orderApi.fullname" . }}
{{- end }}